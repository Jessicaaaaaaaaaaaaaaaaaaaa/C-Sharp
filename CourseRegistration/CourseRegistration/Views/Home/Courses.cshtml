
@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<!-- https://codepen.io/edznan/pen/JMJQbr for nested modal -->

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course Id</th>
            <th>Course Number</th>
            <th>Course Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Courses)
        {
            <tr>
                <th scope="row">@item.CourseId</th>
                <td>@item.CourseNumber</td>
                <td><button class="btn btn-primary btn-block btn-sm" 
                        data-toggle="modal" data-target="#myModal">
                        @item.CourseName</button></td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Students Enrolled</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <table class="table table-striped">
                        <thead>
                            <!-- foreach loop with student names -->
                            <tr>
                                <th>Firstname</th>
                                <th>Lastname</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Registration)
                            {
                                <tr>
                                    <th scope="row">@item.StudentId</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
</div>